---
import { getSession } from '../../lib/auth';
import '../../styles/global.css';

// Redirect to chat if already logged in
const session = getSession(Astro);
if (session) {
  return Astro.redirect('/chat');
}

// Get error and redirect parameters
const errorParam = Astro.url.searchParams.get('error');
const redirectParam = Astro.url.searchParams.get('redirect');
const domainParam = Astro.url.searchParams.get('domain');

// Error messages
const errorMessages: Record<string, { title: string; message: string; suggestions: string[] }> = {
  'auth_failed': {
    title: 'Error de Autenticación',
    message: 'No se pudo completar el inicio de sesión con Google.',
    suggestions: [
      'Verifica que hayas dado permisos a la aplicación',
      'Intenta con otra cuenta de Google',
      'Contacta al administrador si el problema persiste'
    ]
  },
  'no_code': {
    title: 'Código de Autorización Faltante',
    message: 'No se recibió el código de autorización de Google.',
    suggestions: [
      'Intenta iniciar sesión nuevamente',
      'Verifica tu conexión a internet',
      'Limpia las cookies de tu navegador'
    ]
  },
  'auth_processing_failed': {
    title: 'Error al Procesar Autenticación',
    message: 'Ocurrió un error al procesar tu inicio de sesión.',
    suggestions: [
      'Intenta nuevamente',
      'Verifica que tu cuenta de Google esté activa',
      'Contacta soporte si el error persiste'
    ]
  },
  'session_expired': {
    title: 'Sesión Expirada',
    message: 'Tu sesión ha expirado. Por favor, inicia sesión nuevamente.',
    suggestions: [
      'Haz clic en el botón de abajo para iniciar sesión'
    ]
  },
  'unauthorized': {
    title: 'Acceso No Autorizado',
    message: 'Debes iniciar sesión para acceder a esta página.',
    suggestions: [
      'Inicia sesión con tu cuenta de Google',
      'Si no tienes cuenta, contáctanos para crear una'
    ]
  },
  'domain_disabled': {
    title: 'Dominio Deshabilitado',
    message: domainParam 
      ? `El dominio "${domainParam}" no está habilitado para acceder a esta plataforma.`
      : 'Tu dominio de correo no está habilitado para acceder a esta plataforma.',
    suggestions: [
      'Contacta al administrador de tu organización',
      'Verifica que estés usando el correo corporativo correcto',
      'El administrador debe habilitar tu dominio en la sección de Gestión de Dominios'
    ]
  }
};

const currentError = errorParam ? errorMessages[errorParam] : null;
const redirectUrl = redirectParam || '/chat';
---

<!DOCTYPE html>
<html lang="es" class="h-full">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Iniciar Sesión - SalfaGPT</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body class="h-full m-0 p-0">
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900 px-4 py-12">
    <div class="max-w-md w-full">
      
      <!-- Login Card -->
      <div class="bg-white/10 backdrop-blur-lg rounded-2xl shadow-2xl p-8 border border-white/20">
        
        <!-- Logo & Title -->
        <div class="text-center space-y-4 mb-8">
          <div class="flex justify-center">
            <img 
              src="/images/Logo Salfacorp.png" 
              alt="Salfacorp" 
              class="w-24 h-24 object-contain"
            />
          </div>
          
          <div>
            <h1 class="text-4xl font-bold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent mb-2">
              SalfaGPT
            </h1>
            <p class="text-slate-300 text-lg">
              {currentError ? 'Error al Iniciar Sesión' : 'Iniciar Sesión'}
            </p>
          </div>
        </div>

        <!-- Error Message -->
        {currentError && (
          <div class="mb-6 bg-red-500/10 border border-red-500/30 rounded-lg p-4">
            <div class="flex items-start gap-3">
              <svg class="w-6 h-6 text-red-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div class="flex-1">
                <h3 class="text-red-400 font-semibold mb-1">{currentError.title}</h3>
                <p class="text-red-300 text-sm mb-3">{currentError.message}</p>
                {currentError.suggestions.length > 0 && (
                  <div class="space-y-1">
                    <p class="text-red-400 text-xs font-medium">Sugerencias:</p>
                    <ul class="text-red-300 text-xs space-y-1 list-disc list-inside">
                      {currentError.suggestions.map(suggestion => (
                        <li>{suggestion}</li>
                      ))}
                    </ul>
                  </div>
                )}
              </div>
            </div>
          </div>
        )}

        <!-- Google Sign-In Button -->
        <div class="space-y-4">
          <a 
            href={`/auth/login-redirect?redirect=${encodeURIComponent(redirectUrl)}`}
            class="w-full flex items-center justify-center space-x-3 bg-white hover:bg-gray-50 text-gray-900 font-semibold py-4 px-6 rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
          >
            <svg class="w-6 h-6" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            <span>Continuar con Google</span>
          </a>
          
          <!-- Info Text -->
          <div class="text-center space-y-2">
            <p class="text-sm text-slate-400">
              Usamos Google OAuth para autenticación segura
            </p>
            <p class="text-xs text-slate-500">
              No almacenamos tu contraseña
            </p>
          </div>
        </div>

        <!-- Security Info -->
        <div class="mt-8 pt-6 border-t border-white/10">
          <div class="space-y-3">
            <div class="flex items-center gap-3 text-slate-300 text-sm">
              <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
              <span>Autenticación segura con Google</span>
            </div>
            <div class="flex items-center gap-3 text-slate-300 text-sm">
              <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
              <span>Tus datos están protegidos</span>
            </div>
            <div class="flex items-center gap-3 text-slate-300 text-sm">
              <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"></path>
              </svg>
              <span>Cookies HTTP-only seguras</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Footer -->
      <div class="mt-6 text-center">
        <p class="text-xs text-slate-400">
          Al continuar, aceptas nuestros 
          <a href="#" class="text-blue-400 hover:text-blue-300 underline">Términos de Servicio</a>
          y
          <a href="#" class="text-blue-400 hover:text-blue-300 underline">Política de Privacidad</a>
        </p>
      </div>
    </div>
  </div>
</body>
</html>

