---
// Ultra minimal test page - just verify React can mount
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chat Test - Minimal</title>
  </head>
  <body>
    <div id="test-mount">
      <h1 style="color: blue; padding: 20px;">Testing React Mount</h1>
      <p>If you see this, HTML is loading.</p>
      <button onclick="alert('Button works!')" style="padding: 10px; background: green; color: white; border: none; cursor: pointer;">
        Click Me (HTML Button)
      </button>
    </div>
    
    <script>
      console.log('✅ Script executing');
      console.log('✅ User can see this in console');
      
      // Test if React would work
      setTimeout(() => {
        const testDiv = document.getElementById('test-mount');
        if (testDiv) {
          console.log('✅ DOM manipulation works');
          testDiv.innerHTML += '<p style="color: green;">JavaScript is working!</p>';
        }
      }, 1000);
    </script>
  </body>
</html>
