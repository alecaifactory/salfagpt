import { getUserRole, UserRole, hasAnyRole } from '../lib/access-control';

// Get session cookie
const sessionCookie = Astro.cookies.get('openflow_session');

// Check if user is authenticated
if (!sessionCookie) {
  return Astro.redirect('/auth/login?redirect=/expertos');
}

// For now, we'll allow access in development mode
// In production, this would decode the JWT and verify the user
const IS_DEVELOPMENT = import.meta.env.DEV;

if (!IS_DEVELOPMENT) {
  // In production, verify the user role from JWT
  // TODO: Decode JWT and check user role
  // For now, redirect to home if not authorized
  // return Astro.redirect('/home');
}

// Get user info (in production, from JWT)
const userEmail = 'expert@salfacorp.com'; // TODO: Extract from JWT
const userRole = getUserRole(userEmail);

// Verify Expert role or higher
const allowedRoles = [UserRole.EXPERT, UserRole.ADMIN, UserRole.SUPERADMIN];
if (!allowedRoles.includes(userRole) && !IS_DEVELOPMENT) {
  return Astro.redirect('/home');
}
