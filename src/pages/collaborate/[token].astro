/**
 * Collaboration Invitation Page
 * 
 * When a user receives an invitation link, they land here.
 * They can view the document, see highlighted sections, and leave comments.
 */

import { getSession } from '../../lib/auth';
import { firestore } from '../../lib/firestore';

const { token } = Astro.params;

if (!token) {
  return Astro.redirect('/');
}

// Load invitation
const invitationSnapshot = await firestore
  .collection('collaboration_invitations')
  .where('invitationToken', '==', token)
  .limit(1)
  .get();

if (invitationSnapshot.empty) {
  return Astro.redirect('/?error=invitation-not-found');
}

const invitationDoc = invitationSnapshot.docs[0];
const invitation = {
  id: invitationDoc.id,
  ...invitationDoc.data(),
  createdAt: invitationDoc.data().createdAt?.toDate(),
  expiresAt: invitationDoc.data().expiresAt?.toDate(),
};

// Check if expired
if (invitation.expiresAt && invitation.expiresAt < new Date()) {
  return Astro.redirect('/?error=invitation-expired');
}

// Check if already accepted/declined
if (invitation.status === 'declined') {
  return Astro.redirect('/?error=invitation-declined');
}

const session = getSession(Astro);
const isAuthenticated = !!session;
