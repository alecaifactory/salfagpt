{
  "name": "@salfagpt/ai-estimator",
  "version": "0.1.0",
  "description": "AI project estimation & tracking with historical calibration",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ai-estimate": "./bin/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./mcp": {
      "import": "./dist/mcp-server.js",
      "types": "./dist/mcp-server.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && chmod +x bin/cli.js",
    "dev": "tsc --watch",
    "start:mcp": "node dist/mcp-server.js",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "estimation",
    "project-management",
    "tracking",
    "mcp",
    "claude",
    "cursor"
  ],
  "author": "Flow Platform",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "enquirer": "^2.4.1",
    "date-fns": "^3.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0",
    "eslint": "^8.56.0"
  },
  "peerDependencies": {
    "firebase-admin": "^12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/salfagpt/ai-estimator.git"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ]
}


