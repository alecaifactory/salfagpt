  const batch = firestore.batch();
  
  snapshot.docs.forEach(doc => {
    const data = doc.data();
    
    // Old format: { text: string }
    // New format: { content: { type: 'text', text: string } }
    if (typeof data.text === 'string') {
      batch.update(doc.ref, {
        content: {
          type: 'text',
          text: data.text,
        },
      });
    }
  });
  
